---
// STYLES //
import "../styles/global.css";
import "sal.js/dist/sal.css";

// LAYOUTS //
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import Head from "../components/layout/Head.astro";

const {
  title = "AI Playground Masterclass by Microsoft & Reliance",
  description = "Join the AI Playground Masterclass by Microsoft & Reliance Digital. Beginner-friendly AI workshop with a certificate. Learn, prompt & create.",
  ogImage= "/images/reliance-digital-logo.png",
  ogUrl = "",
} = Astro.props;
---

<html lang="en">
  <!-- Head -->
  <head>
    <meta charset="UTF-8" />
    <Head
      title={title}
      description={description}
      ogImage={ogImage}
      ogUrl={ogUrl}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <!-- Body -->
  <body class="bg-background text-foreground font-sans">
    <!-- Commion Header -->
    <Header />

    <!-- Pages content goes here -->
    <slot />

    <!-- Common Footer -->
    <Footer />

    <script type="module" is:inline>
      import sal from "https://cdn.skypack.dev/sal.js";
      sal({ threshold: 0.1, once: true });
    </script>
  </body>
</html>

---

---

<!-- Hero Section with bg image -->
<section
  class="relative bg-[url('/images/hero-bg-image.png')] bg-center bg-size-[34px] min-h-screen py-38 pb-14 lg:py-44 lg:pb-28 xl:flex xl:items-center"
>
  <div
    class="container mx-auto xl:flex xl:flex-row xl:gap-10 xl:justify-center xl:h-[100%] xl:items-center"
  >
    <!-- LEFT: stacked logos -->
    <div class="flex flex-col items-center gap-8 xl:w-[57%] xl:justify-center">
      <!-- Masterclass -->
      <img
        src="/images/masterclass-logo.png"
        alt="Masterclass"
        class="w-[76%] sm:w-3/5 lg:w-[50%] xl:min-w-[576px]"
        data-sal="slide-up"
        data-sal-delay="300"
        data-sal-easing="ease-out-back"
        style="--sal-duration: 1s"
      />

      <!-- Mobile Model Wrap -->
      <div class="text-center relative mt-2 lg:mt-6 xl:hidden">
        <!-- Laptop Model -->
        <img
          src="/images/laptop-model.png"
          alt="mobile-model"
          class="inline-block w-[90%] sm:w-4/5 lg:w-[80%]"
        />
        <!-- Arrow -->
        <svg xmlns="http://www.w3.org/2000/svg" width="144" height="60" viewBox="0 0 144 60" fill="none"
        class="dash-loop absolute -top-[60px] right-[50px] -rotate-[65deg] w-18 
        sm:w-22 md:right-[100px] 
        lg:-rotate-[55deg] lg:-top-[70px] lg:right-[80px] lg:w-1/6 lg:right-6">
          <path class="dash-line" d="M142.5 51.7976C142.5 51.7976 125.412 61.4866 115.5 57.2976C93.5 48 82.5 13.0953 61 14.7976C39.5 16.5 46.5 29.7976 50 32.2976C53.5 34.7976 59.5 36 62.5 26.7976C65.5 17.5953 52.029 6.54851 40 2.5C28.5546 -1.3521 13 8.29763 13 8.29763" stroke="black" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" stroke-dasharray="7 7"/>
          <path d="M6.5207 5.48756C6.85179 4.81577 7.84187 4.92655 8.01629 5.6549L9.24578 10.7889C9.29883 11.0105 9.44382 11.1989 9.64439 11.307L14.617 13.9855C15.2684 14.3364 15.1353 15.3076 14.4134 15.4703L1.63403 18.35C0.977894 18.4978 0.443256 17.8192 0.740585 17.2159L6.5207 5.48756Z" fill="#1E1E1E"/>
        </svg>
        <!-- Rocket -->
        <img
          src="/images/rocket.png"
          alt="Rocket"
          class="rocket-flight absolute -top-8 right-2 w-18 sm:w-22 lg:w-1/6 lg:right-6"
        />
        <!-- Hat -->
        <img
          src="/images/hat.png"
          alt="Graduation Hat"
          class="space-float-spin absolute top-8 left-8 w-18 sm:w-22 sm:left-4 sm:top-10 lg:left-px lg:w-1/6"
        />
      </div>

      <div class="flex flex-col items-center gap-7 sm:gap-10 xl:gap-10">
        <!-- Launchpad -->
        <img
          src="/images/launchpad-logo.png"
          alt="Launchpad"
          class="w-2/3 sm:w-4/5 lg:w-[90%] xl:w-[100%]"
          data-sal="slide-up"
          data-sal-duration="300"
          data-sal-delay="600"
          data-sal-easing="ease-in"
        />

        <!-- Register Button -->
        <a href="#registerForm">
          <button
            type="submit"
            class="btn-cta"
            data-sal="slide-up"
            data-sal-duration="400"
            data-sal-delay="900"
            data-sal-easing="ease-out-back"
          >
            Register Now
          </button>
        </a>
      </div>
    </div>

    <!-- RIGHT: single combined image (student + doodles) -->
    <div class="hidden relative xl:block xl:w-[42%] text-center">
      <!-- Laptop Model -->
      <img
        src="/images/laptop-model.png"
        alt="mobile-model"
        class="inline-block w-[88%]"
        data-sal="zoom-in"
        data-sal-duration="300"
        data-sal-delay="200"
        data-sal-easing="ease-in"
      />
      <!-- Arrow -->
       <svg xmlns="http://www.w3.org/2000/svg" width="144" height="60" viewBox="0 0 144 60" fill="none"
        class="dash-loop absolute top-[70px] -left-[30px] w-28
        2xl:w-38">
          <path class="dash-line" d="M142.5 51.7976C142.5 51.7976 125.412 61.4866 115.5 57.2976C93.5 48 82.5 13.0953 61 14.7976C39.5 16.5 46.5 29.7976 50 32.2976C53.5 34.7976 59.5 36 62.5 26.7976C65.5 17.5953 52.029 6.54851 40 2.5C28.5546 -1.3521 13 8.29763 13 8.29763" stroke="black" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" stroke-dasharray="7 7"/>
          <path d="M6.5207 5.48756C6.85179 4.81577 7.84187 4.92655 8.01629 5.6549L9.24578 10.7889C9.29883 11.0105 9.44382 11.1989 9.64439 11.307L14.617 13.9855C15.2684 14.3364 15.1353 15.3076 14.4134 15.4703L1.63403 18.35C0.977894 18.4978 0.443256 17.8192 0.740585 17.2159L6.5207 5.48756Z" fill="#1E1E1E"/>
        </svg>
      <!-- Rocket -->
      <img
        src="/images/rocket.png"
        alt="Rocket"
        class="rocket-flight absolute -top-20 right-4 w-24
        2xl:w-30 2xl:right-0"
      />
      <!-- Hat -->
      <img
        src="/images/hat.png"
        alt="Graduation Hat"
        class="space-float-spin absolute -top-12 left-4 w-29"
      />
    </div>
  </div>
</section>

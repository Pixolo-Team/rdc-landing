<section class="relative overflow-hidden min-h-full">
  <!-- Background Image -->
  <div class="absolute inset-0 -z-10">
    <img
      src="/images/bg-image.png"
      alt="Background"
      class="w-full h-full object-cover"
    />
  </div>

  <div
    class="mx-auto px-32 py-8 max-md:px-8 h-full flex flex-col gap-8 max-md:gap-14"
  >
    <!-- Top Row: brand left, button right -->
    <div class="flex items-center justify-between w-full">
      <!-- Brand logo -->
      <a href="#">
        <img
          src="/images/brand-logo.svg"
          alt="Brand"
          class="h-20 max-md:h-16 w-auto"
        />
      </a>
      <!-- Register button -->
      <button
        type="submit"
        class="cursor-pointer bg-n-800 text-n-50 p-6 max-md:p-3 max-md:px-5 text-2xl max-md:text-lg font-semibold leading-none"
      >
        Register Now
      </button>
    </div>

    <!-- Main -->
    <div class="flex justify-center gap-8 items-center">
      <!-- LEFT: stacked logos -->
      <div class="text-left">
        <div class="flex flex-col items-center gap-9 max-md:gap-7 px-24 py-12 max-md:p-0">
          <!-- Masterclass -->
          <img
            src="/images/masterclass-logo.svg"
            alt="Masterclass"
            class="h-74 w-auto max-md:h-auto max-md:px-4"
          />
          <!-- Mobile Model -->
          <img
            src="/images/mobile-model.png"
            alt="mobile-model"
            class="h-74 w-auto max-lg:h-auto hidden max-lg:block"
          />
          <!-- Launchpad -->
          <img
            src="/images/launchpad-logo.svg"
            alt="Launchpad"
            class="h-auto w-3/4"
          />
          <!-- Microsoft -->
          <img
            src="/images/microsoft-logo.svg"
            alt="Microsoft"
            class="h-auto w-auto max-md:h-14"
          />
        </div>
      </div>

      <!-- RIGHT: single combined image (student + doodles) -->
      <div class="flex justify-center md:justify-end max-lg:hidden">
        <img
          src="/images/model.png"
          alt="Student with doodles"
          class="h-full w-full drop-shadow-xl"
        />
      </div>
    </div>
  </div>
</section>
